<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ExpanceManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="colorPrimary">@color/btn_gmail_color</item>-->
    </style>

    <style name="Theme.ExpanceManager" parent="Base.Theme.ExpanceManager" />

<!--    primery text-->
    <style name="primery_text_black">
        <item name="android:fontFamily">@font/khula</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="primery_text_white">
        <item name="android:fontFamily">@font/khula</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

<!--    heading primery-->

    <style name="primary_heading_black">
        <item name="fontFamily">khula_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="primary_heading_white">
        <item name="fontFamily">khula_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="amount_code">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/khula</item>
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>



    <style name="category_text">
        <item name="android:fontFamily">@font/khula</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
    </style>

    <style name="category_img">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

    <style name="title_add_trx">
        <item name="android:fontFamily">@font/khula_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="icon_add_trx">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_style</item>
        <!-- Optional: Customize other attributes like text color, padding, etc. -->
    </style>
    
<!--    linear to grid button-->
    <style name="linear_to_grid" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>